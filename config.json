{
    "name": "Freq_Net",
    "n_gpu": 2,

    "arch": {
        "type": "FreqNet",
        "args": {}
    },
    "data_loader": {
        "type": "MnistDataLoader",
        "args":{
            "data_dir": "data/",
            "batch_size": 128,     
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": false ,
            "betas" : [0.9 , 0.99] ,
            "eps" : 1e-8
        }
    },
    "loss": "CharbonnierLoss",
    "metrics": [
        "frm", "psnr"
    ],
    "lr_scheduler": {
        "type": "cossine_lr",
        "args": {
            "t_max" : 20
        }
    },
    "trainer": {
        "epochs": 20,
        "save_dir": "saved_history/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 5,

        "tensorboard": false
    }
}
