{
    "name": "Freq_Net_SR",
    "n_gpu": 2,

    "arch": {
        "type": "FreqNet",
        "args": {}
    },

    "data_loader": {
        "type": "DIV2KDataLoader",
        "args":{
            "data_dir": "datasets/",
            "batch_size": 16,     
            "shuffle": true,
            "validation_split": 0.0,
            "num_workers": 1
        }
    },
        
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 1e-4,
            "weight_decay": 0,
            "amsgrad": false ,
            "betas" : [0.9 , 0.99] ,
            "eps" : 1e-8
        }
    },

    "loss": "CharbonnierLoss",
    "metrics": [
        "frm", "psnr"
    ],
    "lr_scheduler": {
        "type": "cossine_lr",
        "args": {
            "t_max" : 20
        }
    },

    "trainer": {
        "epochs": 20,
        "save_dir": "saved_history/",
        "save_period": 5,
        "verbosity": 2,
        
        "monitor": "min loss",
        "early_stop": 5,

        "tensorboard": false
    }
}
